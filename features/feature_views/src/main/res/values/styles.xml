<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppThemeStarting">
        <item name="android:windowBackground">@color/colorSplashBackground</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>

        <item name="snackbarStyle">@style/AppTheme.Snackbar</item>
        <item name="snackbarButtonStyle">@style/AppTheme.SnackbarButton</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="appContrastColor">@color/black</item>
        <item name="appTextPrimaryColor">@color/textPrimary</item>
        <item name="appLightTextColor">@color/textLight</item>
        <item name="appBackgroundColor">@color/colorBackground</item>
        <item name="appBackgroundDialogColor">@color/colorDialogBackground</item>
        <item name="appDialogBackground">@drawable/bg_rounded_bottom_sheet</item>
        <item name="appTextHintColor">@color/textHint</item>
        <item name="appArrow">@drawable/arrow</item>
        <item name="appDividerColor">@color/colorDivider</item>
        <item name="appDivider">@drawable/divider_drawable</item>
        <item name="appInputFieldBorder">@drawable/bg_input_field_border</item>
        <item name="appInputFieldBorderDialog">@drawable/bg_input_field_border</item>
        <item name="appInputFieldBorderColor">@color/inputFieldBorder</item>
        <item name="appInputFieldBorderDialogColor">@color/inputFieldBorder</item>
        <item name="appInputFieldBorderTimeDialogColor">@color/inputFieldBorder</item>
        <item name="appPieChartDividerColor">@color/pieChartDivider</item>
        <item name="appCardBackgroundColor">@color/cardBackground</item>
        <item name="appFabBackgroundColor">@color/colorFabBackground</item>
        <item name="appFabContentColor">@color/colorFabContent</item>
        <item name="appButtonOnCardBackgroundColor">@color/buttonOnCardBackground</item>
        <item name="appPopupBackground">@drawable/bg_spinner_popup</item>
        <item name="appPopupItemBackground">@drawable/bg_states_spinner_item</item>
        <item name="appTabSelectedColor">@color/colorTabSelected</item>
        <item name="appTabUnselectedColor">@color/colorTabUnselected</item>
        <item name="appActiveColor">@color/colorActive</item>
        <item name="appActiveGradientEndColor">@color/colorActiveGradientEnd</item>
        <item name="appInactiveColor">@color/colorInactive</item>
        <item name="appIconColor">@color/colorIcon</item>
        <item name="appLegendColor">@color/colorLegend</item>
        <item name="appLegendSecondaryColor">@color/colorLegendSecondary</item>
        <item name="appPositiveColor">@color/colorPositive</item>
        <item name="appNegativeColor">@color/colorNegative</item>
        <item name="appInfoColor">@color/colorInfo</item>
        <item name="appUntrackedColor">@color/colorUntracked</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>

        <item name="snackbarStyle">@style/AppTheme.Snackbar</item>
        <item name="snackbarButtonStyle">@style/AppTheme.SnackbarButton</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Dark</item>
        <item name="android:windowBackground">@color/colorBackgroundDark</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="appContrastColor">@color/white</item>
        <item name="appTextPrimaryColor">@color/textPrimaryDark</item>
        <item name="appLightTextColor">@color/textLightDark</item>
        <item name="appBackgroundColor">@color/colorBackgroundDark</item>
        <item name="appBackgroundDialogColor">@color/colorDialogBackgroundDark</item>
        <item name="appDialogBackground">@drawable/bg_rounded_bottom_sheet_dark</item>
        <item name="appTextHintColor">@color/textHintDark</item>
        <item name="appArrow">@drawable/arrow_dark</item>
        <item name="appDividerColor">@color/colorDividerDark</item>
        <item name="appDivider">@drawable/divider_drawable_dark</item>
        <item name="appInputFieldBorder">@drawable/bg_input_field_border_dark</item>
        <item name="appInputFieldBorderDialog">@drawable/bg_input_field_border_dialog_dark</item>
        <item name="appInputFieldBorderColor">@color/inputFieldBorderDark</item>
        <item name="appInputFieldBorderDialogColor">@color/inputFieldBorderDialogDark</item>
        <item name="appInputFieldBorderTimeDialogColor">@color/inputFieldBorderTimeDialogDark</item>
        <item name="appPieChartDividerColor">@color/pieChartDividerDark</item>
        <item name="appCardBackgroundColor">@color/cardBackgroundDark</item>
        <item name="appFabBackgroundColor">@color/colorFabBackgroundDark</item>
        <item name="appFabContentColor">@color/colorFabContentDark</item>
        <item name="appButtonOnCardBackgroundColor">@color/buttonOnCardBackgroundDark</item>
        <item name="appPopupBackground">@drawable/bg_spinner_popup_dark</item>
        <item name="appPopupItemBackground">@drawable/bg_states_spinner_item_dark</item>
        <item name="appTabSelectedColor">@color/colorTabSelectedDark</item>
        <item name="appTabUnselectedColor">@color/colorTabUnselectedDark</item>
        <item name="appActiveColor">@color/colorActiveDark</item>
        <item name="appActiveGradientEndColor">@color/colorActiveGradientEndDark</item>
        <item name="appInactiveColor">@color/colorInactiveDark</item>
        <item name="appIconColor">@color/colorIconDark</item>
        <item name="appLegendColor">@color/colorLegendDark</item>
        <item name="appLegendSecondaryColor">@color/colorLegendSecondaryDark</item>
        <item name="appPositiveColor">@color/colorPositiveDark</item>
        <item name="appNegativeColor">@color/colorNegativeDark</item>
        <item name="appInfoColor">@color/colorInfoDark</item>
        <item name="appUntrackedColor">@color/colorUntrackedDark</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:textColor">?appTextPrimaryColor</item>
        <item name="android:textColorPrimary">?appTextPrimaryColor</item>
        <item name="textColorAlertDialogListItem">?appTextPrimaryColor</item>
        <item name="buttonBarNegativeButtonStyle">@style/AppTheme.DialogButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/AppTheme.DialogButton</item>
    </style>

    <style name="AppTheme.Dialog.Dark" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:textColor">?appTextPrimaryColor</item>
        <item name="android:textColorPrimary">?appTextPrimaryColor</item>
        <item name="textColorAlertDialogListItem">?appTextPrimaryColor</item>
        <item name="buttonBarNegativeButtonStyle">@style/AppTheme.DialogButton.Dark</item>
        <item name="buttonBarPositiveButtonStyle">@style/AppTheme.DialogButton.Dark</item>
    </style>

    <style name="AppTheme.DialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="AppTheme.DialogButton.Dark" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="AppTheme.Snackbar" parent="Widget.MaterialComponents.Snackbar.FullWidth">
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="AppTheme.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">?colorSecondary</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyleWrapper</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

    <style name="BottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="InputFieldCard">
        <item name="cardBackgroundColor">?appBackgroundColor</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="cardCornerRadius">@dimen/input_field_corner_radius</item>
        <item name="cardElevation">0dp</item>
    </style>

    <!--  TODO move maxLines and ellipsize to here  -->
    <style name="InputFieldCardText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">?appTextPrimaryColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="InputFieldCardDialog" parent="InputFieldCard">
        <item name="cardBackgroundColor">?appBackgroundDialogColor</item>
    </style>

    <style name="ChangeItemNameEditText">
        <item name="android:textColor">?appTextPrimaryColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/blue_grey_300</item>
    </style>

    <style name="EditTextMultiLine">
        <item name="android:textColor">?appTextPrimaryColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textColorHint">@color/blue_grey_300</item>
    </style>

    <style name="ChangeItemInputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/input_field_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_field_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_field_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_field_corner_radius</item>
        <item name="boxStrokeColor">@color/states_input_field_border_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="errorTextAppearance">@style/ChangeItemErrorStyle</item>
        <item name="hintTextAppearance">@style/ChangeItemHintStyle</item>
        <item name="hintTextColor">@color/blue_grey_300</item>
        <item name="endIconDrawable">@drawable/clear</item>
        <item name="endIconMode">clear_text</item>
        <item name="cursorColor">?colorPrimary</item>
        <item name="cursorErrorColor">?colorPrimary</item>
    </style>

    <style name="ChangeItemInputFieldDialog" parent="ChangeItemInputField">
        <item name="boxStrokeColor">@color/states_input_field_border_dialog_color</item>
    </style>

    <style name="ChangeItemInputFieldColorDialog" parent="ChangeItemInputFieldDialog">
        <item name="endIconDrawable">@null</item>
        <item name="endIconMode">none</item>
    </style>

    <style name="ChangeItemInputFieldTimeDialog" parent="ChangeItemInputField">
        <item name="boxStrokeColor">@color/states_input_field_border_time_dialog_color</item>
    </style>

    <style name="ChangeItemHintStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ChangeItemErrorStyle">
        <item name="android:textColor">@color/red_600</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonTimeAdjust">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">?appInputFieldBorder</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:text">+/-</item>
        <item name="android:textColor">?appTextHintColor</item>
        <item name="android:textStyle">bold</item>
        <item name="autoSizeMinTextSize">1sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="ColorIconItem">
        <item name="android:layout_width">@dimen/color_icon_item_width</item>
        <item name="android:layout_height">@dimen/color_icon_item_height</item>
        <item name="android:layout_marginStart">@dimen/color_icon_item_margin</item>
        <item name="android:layout_marginEnd">@dimen/color_icon_item_margin</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">@dimen/color_icon_item_corner_radius</item>
        <item name="cardElevation">@dimen/color_icon_item_elevation</item>
    </style>

    <style name="RecordTypeCard">
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">@dimen/record_type_card_corner_radius</item>
        <item name="cardElevation">@dimen/record_type_card_elevation</item>
    </style>

    <style name="RecordTypeText">
        <item name="android:maxLines">2</item>
        <item name="android:textColor">?appIconColor</item>
        <item name="android:textStyle">bold</item>
        <item name="autoSizeMaxTextSize">14sp</item>
        <item name="autoSizeMinTextSize">4sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="RecordTypeItem">
        <item name="android:layout_width">@dimen/record_type_card_width</item>
        <item name="android:layout_height">@dimen/record_type_card_height</item>
    </style>

    <style name="SettingsDivider">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">?appDividerColor</item>
    </style>

    <style name="EditScreenDivider">
        <item name="android:layout_height">2dp</item>
        <item name="android:background">?appDividerColor</item>
    </style>

    <style name="EditScreenControlButton" parent="SettingsCard">
        <item name="android:layout_height">@dimen/input_field_height</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="EditScreenControlButtonText" parent="InputFieldCardText">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="EditScreenControlButtonImage">
        <item name="android:scaleType">center</item>
        <item name="android:tint">?appInactiveColor</item>
        <item name="layout_constraintDimensionRatio">h,1:1</item>
    </style>

    <style name="EditScreenField" parent="InputFieldCardText">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="EditScreenFieldArrow">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:src">?appArrow</item>
    </style>

    <style name="EditScreenPreview">
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
        <item name="layout_constraintDimensionRatio">1</item>
    </style>

    <style name="EditScreenPreviewIcon">
        <item name="android:padding">4dp</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="EditScreenPreviewText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">?appLightTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="EditScreenContainer">
        <item name="android:background">?android:colorBackground</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="SettingsCard">
        <item name="cardBackgroundColor">?appCardBackgroundColor</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="SettingsText">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">?appTextPrimaryColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsSecondaryText">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SettingsTranslatorsText" parent="SettingsSecondaryText">
        <item name="android:paddingTop">12dp</item>
    </style>

    <style name="AppButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColor">?appLightTextColor</item>
        <item name="backgroundTint">?appInactiveColor</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <style name="AppButtonActive">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColor">?appLightTextColor</item>
        <item name="backgroundTint">?appActiveColor</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <style name="ContainerRangeMainButton" parent="AppButtonActive">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:padding">0dp</item>
        <item name="layout_constraintHorizontal_weight">2.5</item>
    </style>

    <style name="ContainerRangeSelectableMainButton" parent="ContainerRangeMainButton">
        <item name="icon">@drawable/arrow</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">-24dp</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="ContainerRangeButton" parent="AppButton">
        <item name="android:scaleType">fitXY</item>
        <item name="icon">@drawable/arrow_left</item>
        <item name="iconGravity">start</item>
        <item name="iconTint">@color/white</item>
        <item name="layout_constraintHorizontal_weight">1</item>
    </style>

    <style name="DialogTitle">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">?appTextPrimaryColor</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RecordSimpleText">
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?appLightTextColor</item>
        <item name="android:textSize">12sp</item>
        <item name="autoSizeMaxTextSize">12sp</item>
        <item name="autoSizeMinTextSize">1sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="AppFabButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/button_corner_radius</item>
    </style>

    <style name="RecordQuickActionButton" parent="EditScreenControlButton">
        <item name="android:layout_height">68dp</item>
        <item name="cardBackgroundColor">?appActiveColor</item>
    </style>

    <style name="RecordQuickActionButtonImage" parent="EditScreenControlButtonImage">
        <item name="android:tint">?appLightTextColor</item>
    </style>

    <style name="RecordQuickActionButtonText" parent="EditScreenControlButtonText">
        <item name="android:textColor">?appLightTextColor</item>
    </style>

    <style name="AlertDialogRounded" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/AlertDialogCorners</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertDialogButtonStyle</item>
    </style>

    <style name="AlertDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="AlertDialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>