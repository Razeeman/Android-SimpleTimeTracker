<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerSettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <include
            android:id="@+id/layoutSettingsMain"
            layout="@layout/settings_main_layout" />

        <include
            android:id="@+id/layoutSettingsNotifications"
            layout="@layout/settings_notifications_layout"/>

        <include
            android:id="@+id/layoutSettingsDisplay"
            layout="@layout/settings_display_layout" />

        <include
            android:id="@+id/layoutSettingsAdditional"
            layout="@layout/settings_additional_layout" />

        <include
            android:id="@+id/layoutSettingsRating"
            layout="@layout/settings_rate_layout" />

        <include
            android:id="@+id/layoutSettingsBackup"
            layout="@layout/settings_backup_layout" />

        <include layout="@layout/settings_translators_layout" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>