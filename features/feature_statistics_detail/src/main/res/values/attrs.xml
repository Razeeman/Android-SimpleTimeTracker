<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BarChartView">
        <!-- Used for layout preview -->
        <attr name="barCount" format="integer" />
        <attr name="dividerMaxWidth" format="dimension" />
        <attr name="barCornerRadius" format="dimension" />
        <attr name="barColor" format="color" />
        <attr name="legendTextSuffix" format="string" />
        <attr name="legendTextSize" format="dimension" />
        <attr name="legendTextColor" format="color" />
        <attr name="legendLineColor" format="color" />
        <attr name="selectedBarBackgroundColor" format="color" />
        <attr name="selectedBarTextColor" format="color" />
        <attr name="showSelectedBarOnStart" format="boolean" />
        <attr name="addLegendToSelectedBar" format="boolean" />
        <attr name="shouldDrawHorizontalLegends" format="boolean" />
    </declare-styleable>

    <declare-styleable name="StatisticsDetailCardView">
        <!-- Used for layout preview -->
        <attr name="itemCount" format="integer" />
        <attr name="itemDescription" format="string" />
        <attr name="itemTitleTextSize" format="dimension" />
        <attr name="itemSubtitleTextSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SeriesView">
        <attr name="seriesBarCountInPreview" format="integer" />
        <attr name="seriesMaxValueInPreview" format="integer" />
        <attr name="seriesDividerHeight" format="dimension" />
        <attr name="seriesBarHeight" format="dimension" />
        <attr name="seriesBarCornerRadius" format="dimension" />
        <attr name="seriesBarColor" format="color" />
        <attr name="seriesLegendTextPadding" format="dimension" />
        <attr name="seriesLegendTextSize" format="dimension" />
        <attr name="seriesLegendTextColor" format="color" />
        <attr name="seriesValueTextSize" format="dimension" />
        <attr name="seriesValueTextColor" format="color" />
    </declare-styleable>
</resources>